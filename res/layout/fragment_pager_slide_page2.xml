<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent" android:layout_height="match_parent"
	style="@style/fragmentSlidePage2" android:layout_gravity="top"
	android:orientation="vertical">

	<include layout="@layout/fragment_pager_slide_actionbar" />

	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="center"
	    android:orientation="vertical"
	    android:padding="16dp" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
			<Button
			        style="@style/FooterPagerButton"
			        android:layout_height="match_parent"
			        android:drawableLeft="@drawable/btn_footer_pager2"
			        android:paddingRight="10dp"
			        android:text="Select Map" />
			<Spinner
			    android:id="@+id/sp_map_select"
			    android:layout_width="match_parent"
			    android:layout_height="60dp"
			    android:layout_weight="1"
			    android:background="#fff"
			    android:drawSelectorOnTop="true"
			    android:fontFamily="sans-serif"
			    android:padding="20dp"
			    android:textColor="#000"
			    android:textSize="30sp" />

		</LinearLayout>
		
	    <ImageView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:layout_marginBottom="60dp"
		    android:src="@drawable/instruction_navigating_mode" />
	    
	</LinearLayout>

</LinearLayout>
